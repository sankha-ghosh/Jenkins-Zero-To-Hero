pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'pwd'
                sh 'ls -la'
                sh 'javac HelloWorld.java'
            }
        }
        stage('Dockerize') {
            steps {
                sh 'docker build -t my-java-app .'
            }
        }
        stage('Run Docker Image') {
            steps {
                sh 'docker run my-java-app'
            }
        }
    }
}
